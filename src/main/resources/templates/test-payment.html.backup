<!-- 
TEST PAYMENT TEMPLATE - BACKUP FOR FUTURE USE
This template is hidden for production submission but kept for future development/testing
To re-enable: rename this file to test-payment.html and uncomment the test payment button in payment.html
-->

<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Payment - E-Commerce Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link th:href="@{/css/style.css}" rel="stylesheet">
</head>
<body>
    <div th:replace="layout :: header"></div>
    
    <div class="container mt-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a th:href="@{/}">Home</a></li>
                <li class="breadcrumb-item"><a th:href="@{/cart}">Cart</a></li>
                <li class="breadcrumb-item"><a th:href="@{/checkout}">Checkout</a></li>
                <li class="breadcrumb-item"><a th:href="@{/checkout/payment/{orderId}(orderId=${order.id})}">Payment</a></li>
                <li class="breadcrumb-item active">Test Payment</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">
                            <i class="fas fa-flask me-2"></i>Test Payment (College Prototype)
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>College Prototype Mode:</strong> This is a test payment system for demonstration purposes. 
                            No real money will be processed.
                        </div>
                        
                        <div class="text-center mb-4">
                            <h5>Test Payment Options</h5>
                            <p class="text-muted">Choose a test scenario to simulate payment</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                                        <h5 class="card-title text-success">Successful Payment</h5>
                                        <p class="card-text">Simulate a successful payment transaction</p>
                                        <form th:action="@{/payment/test/success/{orderId}(orderId=${order.id})}" method="post">
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-check me-2"></i>Pay Successfully
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="card border-danger">
                                    <div class="card-body text-center">
                                        <i class="fas fa-times-circle text-danger fa-3x mb-3"></i>
                                        <h5 class="card-title text-danger">Failed Payment</h5>
                                        <p class="card-text">Simulate a failed payment transaction</p>
                                        <form th:action="@{/payment/test/fail/{orderId}(orderId=${order.id})}" method="post">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-times me-2"></i>Payment Failed
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a th:href="@{/checkout/payment/{orderId}(orderId=${order.id})}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Payment
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div th:replace="layout :: footer"></div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
