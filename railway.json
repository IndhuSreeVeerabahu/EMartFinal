{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=prod -Dserver.port=${PORT:-8080} -jar target/E_Commerce-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/",
    "healthcheckTimeout": 1000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 100
  }
}
